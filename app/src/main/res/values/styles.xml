    <!-- Style for the Expanded Collapsing Toolbar Title -->
    <!-- Keep this here -->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:shadowColor">#80000000</item> <!-- Semi-transparent black -->
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textSize">22sp</item>
        

    </style>

    <!-- Style for the Collapsed Collapsing Toolbar Title -->
    <!-- Keep this here -->
    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item> <!-- Or headerTitleColor if you prefer -->
        <item name="android:fontFamily">@font/helvetica</item>
    </style>



