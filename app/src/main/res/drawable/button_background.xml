<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dark_orange" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Default State -->
    <item>
        <shape>
            <solid android:color="@color/orange" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
