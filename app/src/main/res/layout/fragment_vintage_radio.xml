<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:padding="16dp">

    <TextView
        android:id="@+id/audioTitleHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vintage Audio"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/helvetica"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/audioSubheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Telephones, Recorders, and Microphones"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:fontFamily="@font/helvetica"
        app:layout_constraintTop_toBottomOf="@id/audioTitleHeader"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/artRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/audioSubheader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
