<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353e39"
    android:fitsSystemWindows="true"
    tools:context=".audio_narga">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#353e39">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/nagra_box"
            android:background="@drawable/roundedcorners_bottom"
            android:clipToOutline="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="332dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/helvetica"
            android:text="Nagra Open Real Field Recorder (1960s-2000s)"
            android:textAlignment="center"
            android:textColor="@color/darkwhite"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="371dp"
            android:layout_height="112dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/helvetica"
            android:text="Used as a portable device for recording in live interviews and shooting for films. Along this, it is partnered with headphones for live recording, and is typically handled by the soundman with specific instructions to maintain audio control from the sound director."
            android:textAlignment="center"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="170dp"
            android:layout_height="31dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/helvetica"
            android:text="Additional Info:"
            android:textAlignment="center"
            android:textColor="@color/darkwhite"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="314dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/helvetica"
            android:text="This item is given by the Director Mike De Leon to Art Tibaldo"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
